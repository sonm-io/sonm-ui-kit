@import "../../constants.styl"


.root {
  margin: 16px 0;
  & + & {
    margin-top: 16px;
  }
}

.checkbox {
  display: none;
}

.checkbox:checked  {
  & + .fakeCheckbox {
    background: $active;
    border: none;
  }
}

.label {
  cursor: pointer;
  user-select: none;
  padding-bottom: 2px;
}

.fakeCheckbox {
  display: inline-block;
  width: 16px;
  height: 16px;
  border: 1px solid $textColor;
  background: white;
  transition-duration: $inputAnimationDuration;
  margin-right: 8px;
  bottom: -2px;
  &::before {
    content: '';
    display: block;
    background: url(assets/check.svg) no-repeat center;
    width: 100%;
    height: 100%;
  }
}
.title {
  color: $textColor;
  font-size: 15px;
  padding-right 8px;
}
.children {

}
.label:hover,
.label:focus {
  .fakeCheckbox {
    border-color: $active;
  }
  .title {
    color: $active;
  }
  .children {

  }
}


.label:active {
  .fakeCheckbox {
    border: 2px solid $activeDark;
  }
  .title {
    color: $activeDark;
  }
  .children {

  }
}

.label.disabled {

  .checkbox:checked  {
    & + .fakeCheckbox {
      background: $inputStaticBorder;
      border: none;
    }
  }
  &:active {
   .fakeCheckbox {
     border-width: 1px;
   }
  }
  &:hover,
  &:focus {
    .fakeCheckbox {
      border-color: $inputStaticBorder;
    }
    .title {
      color: $static;
    }
  }
  .fakeCheckbox {
    border-color: $inputStaticBorder;
  }
  .title {
    color: $static;
  }
  .children {

  }
}